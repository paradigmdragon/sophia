{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "dialog:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "/Users/dragonpd/Sophia/workspace/**" },
        { "path": "/Users/dragonpd/Sophia/logs/**" },
        { "path": "/Users/dragonpd/Sophia/docs/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "/Users/dragonpd/Sophia/workspace/**" },
        { "path": "/Users/dragonpd/Sophia/logs/**" },
        { "path": "/Users/dragonpd/Sophia/docs/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "/Users/dragonpd/Sophia/workspace/**" },
        { "path": "/Users/dragonpd/Sophia/logs/**" },
        { "path": "/Users/dragonpd/Sophia/docs/**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "/Users/dragonpd/Sophia/workspace/**" },
        { "path": "/Users/dragonpd/Sophia/logs/**" },
        { "path": "/Users/dragonpd/Sophia/docs/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "/Users/dragonpd/Sophia/workspace/**" },
        { "path": "/Users/dragonpd/Sophia/logs/**" },
        { "path": "/Users/dragonpd/Sophia/docs/**" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "/Users/dragonpd/Sophia/workspace/**" },
        { "path": "/Users/dragonpd/Sophia/logs/**" },
        { "path": "/Users/dragonpd/Sophia/docs/**" }
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        { "path": "/Users/dragonpd/Sophia/workspace/**" },
        { "path": "/Users/dragonpd/Sophia/logs/**" },
        { "path": "/Users/dragonpd/Sophia/docs/**" }
      ]
    },
    "fs:allow-appdata-write",
    "fs:allow-appdata-read",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-python",
          "cmd": "/Users/dragonpd/Sophia/core/venv/bin/python",
          "args": ["-m", "app.cli", "chat", { "validator": ".*" }]
        },
        {
          "name": "run-ingest-logs",
          "cmd": "/Users/dragonpd/Sophia/.venv/bin/python",
          "args": ["scripts/ingest_ide_logs.py"]
        },
        {
          "name": "run-append-note",
          "cmd": "/Users/dragonpd/Sophia/.venv/bin/python",
          "args": ["scripts/append_note_ui.py"]
        },
        {
          "name": "run-append-chat-memory",
          "cmd": "/Users/dragonpd/Sophia/.venv/bin/python",
          "args": [
            "scripts/append_chat_memory.py",
            { "validator": ".*" },
            { "validator": ".*" },
            { "validator": "\\d+" }
          ]
        }
      ]
    }
  ]
}
